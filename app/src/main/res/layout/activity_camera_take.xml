<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="obx.com.futurister.CameraTake">

    <ImageView
        android:id="@+id/TitleBar3"
        android:background="@color/accent_material_light"
        android:layout_width="fill_parent"
        android:layout_height="60dp" />

    <ImageButton
        android:id="@+id/BackButton2"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"
        android:layout_alignTop="@id/TitleBar3"
        android:onClick="goBackOptions"
        android:layout_alignBottom="@id/TitleBar3"
        android:layout_alignLeft="@id/TitleBar3"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/moreDialogShare"
        android:src="@drawable/more"
        android:layout_alignTop="@id/TitleBar3"
        android:layout_alignBottom="@id/TitleBar3"
        android:background="@android:color/transparent"
        android:onClick="helpDialShare"
        android:layout_alignRight="@id/TitleBar3"
        android:layout_marginRight="7dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/fotoLayer"
        android:layout_below="@+id/TitleBar3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/camOut"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    </RelativeLayout>



    <ImageView
        android:id="@+id/BottomBar"
        android:background="@color/material_blue_grey_800"
        android:alpha="0.5"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="70dp" />
    <ImageButton
        android:id="@+id/facebookShare"

        android:onClick="shareIt"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/BottomBar"
        android:layout_alignBottom="@id/BottomBar"
        android:gravity="center"
        android:src="@drawable/shares"
        android:layout_width="90dp"
        android:layout_height="90dp" />



</RelativeLayout>
